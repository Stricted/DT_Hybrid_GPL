[settings]
functionname = hi_adapter_cli_lsw_mac_get_learnmode;
attributenum = 1;
attributeflag= 1;

[parameter]
attribute=alias<learnmode>            type<uint>   range<0x0,0x3>                default<0>;

[help]
typedef struct
{
    hi_lsw_mac_learn_mode_e em_learnmode;
}hi_lsw_mac_learn_mode_s;

/* MAC学习模式 */
typedef enum
{
    HI_LSW_MAC_LOGIC_LEARN_FROM_PORT_E = 0,   /* 逻辑基于端口学习模式;    */
    HI_LSW_MAC_LOGIC_LEARN_FROM_FLOW_E,       /* 逻辑基于流学习模式;      */
    HI_LSW_MAC_CPU_LEARN_FROM_PORT_E,         /* CPU软件基于端口学习模式; */
    HI_LSW_MAC_CPU_LEARN_FROM_FLOW_E,         /* CPU软件基于流学习模式;   */    
}hi_lsw_mac_learn_mode_e;