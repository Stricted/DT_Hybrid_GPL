menu "Customize feature config"
config GPIO_CTRL_POWER
		bool "GPIO CTRL POWER"
		default n
		help
			Enable this option if you need to control power module by GPIO
	  
if 	GPIO_CTRL_POWER
config GPIO_CTRL_POWER_MODE
	int "GPIO_CTRL_POWER_MODE 0 for serial ,1 for normal"
	default "1"
	help
	  Enable this 
	  
config GPIO_CTRL_POWER_ACTIVE_PIN
	int "GPIO_CTRL_POWER_ACTIVE_PIN enter the pin for serial or normal"
	default "-1"
	help
	  Enable this 
	  
config GPIO_CTRL_POWER_ACTIVE_PIN_STATE
	int "GPIO_CTRL_POWER_ACTIVE_PIN_STATE 0 for low and 1 for high"
	default "0"
	help
	  Enable this 
	  
endif	##end of GPIO_CTRL_POWER

