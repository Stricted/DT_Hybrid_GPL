#! /bin/sh

prefix=/usr/local
exec_prefix=${prefix}

usage()
{
    cat <<EOF
Usage: libesmtp-config [OPTION]

Known values for OPTION are:

  --prefix=DIR		change libesmtp prefix [default $prefix]
  --libs		print library linking information
  --cflags		print pre-processor and compiler flags
  --plugindir		print authentication plugin location
  --help		display this help and exit
  --version		output version information
  --numeric-version	output version information
  --lib-version		output library version
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
	prefix=$optarg
	;;

    --prefix)
	echo $prefix
	;;

    --version)
	echo 1.0.6
	exit 0
	;;

    --numeric-version)
	echo 1.0.6 | awk -F '[a-z.]*' '{ print ($1 * 1000 +  $2) * 1000 + $3 }' 
	exit 0
	;;

    --lib-version)
	echo 7:6:1
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
       	echo -I${prefix}/include 
       	;;

    --libs)
       	echo  -L${exec_prefix}/lib -lesmtp -lssl_openssl -lcrypto_openssl -ldl  
       	;;

    --plugindir)
       	echo /var/local/esmtp-plugins
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
