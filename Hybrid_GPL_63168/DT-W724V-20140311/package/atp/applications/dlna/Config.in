    default n
config BUILD_DMS_UPLOAD
    bool "Support ATP dms upload."
    depends on BUILD_DMS
    default n

config BUILD_DMS_FRIENDLY_NAME
    string "Support to customize dms friendly name."
    depends on BUILD_DMS
    default n
    
config BUILD_UPNP_AV_2
    bool "Support UPnP AV 2.0"
