#!/bin/sh

PATH=/sbin:/bin:/usr/sbin:/usr/bin

if [ -f /etc/default/chilli ] ; then
   . /etc/default/chilli
fi

# start chilli
if [ -f $CONFFILE ] ; then
	/etc/init.d/chilli start&
	if [ $? -eq 0 ] ; then
		foncontrl wifiup
		echo "[ONLINE]FON WIFI UP"
		echo -n "Online" > $STATUSFILE
		foncontrl initsession
		foncontrl incfilevalue /var/fon/stats/total/sessions
		sleep 2
		ip route replace 172.17.2.0/24 dev tun0 table 270
	fi
fi

exit 0
